<script type="text/ng-template" id="account">
    <div ui-view class=""></div>
</script>

<script type="text/ng-template" id="account.create">
    <div class="input-group">
        <span class="input-group-btn">
            <button ng-click="createAccount()" class="btn btn-default" type="button">Create</button>
        </span>
        <input ng-model="name" type="text" class="form-control" placeholder="Account Name...">
    </div>
    <div ng-if='error' class="form-group row">
        <div class="col-sm-offset-2 col-sm-10 col-lg-6">
            <div ng-include="'common.error'" ng-controller="common.error"><div>
        </div>
    </div>
</script>

<script type="text/ng-template" id="account.edit">

    <div class="input-group">
        <span class="input-group-btn">
            <button class="btn btn-default" type="button">Change Name</button>
        </span>
        <input ng-model="account.name" type="text" class="form-control" placeholder="Account Name...">
    </div>

    <div class="input-group">
        <span class="input-group-btn">
            <button ng-click="addService()" class="btn btn-default" type="button">Add Service</button>
        </span>
        <input ng-model="newServiceName" type="text" class="form-control" placeholder="Service Name...">
    </div>

    <div class="input-group">
        <div ng-init="searchFor='Products'" uib-dropdown class="input-group-btn dropdown">
            <button id="single-button" type="button" class="btn btn-default" uib-dropdown-toggle>
              {{searchFor}}<span class="caret"></span>
            </button>
            <ul class="uib-dropdown-menu" role="menu" aria-labelledby="single-button">
                <li ng-click="searchFor='Products'" style="cursor:pointer;"><a>Products</a></li>
                <li ng-click="searchFor='Services'" style="cursor:pointer;"><a>Services</a></li>
            </ul>
        </div>
        <input type="text" class="form-control" aria-label="...">
    </div>

    <div ng-repeat="result in results">
        {{result}}
    </div>

    <div ng-if='error' class="form-group row">
        <div class="col-sm-offset-2 col-sm-10 col-lg-6">
            <div ng-include="'common.error'" ng-controller="common.error"><div>
        </div>
    </div>
</script>

<script type="text/ng-template" id="account.search.modal">

    <div class="modal-header">
        <h3 class="modal-title">Account Search</h3>
    </div>
    <div class="modal-body">
        <form ng-submit="search()">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Search</button>
                </span>
                <input ng-model="words" type="text" class="form-control" placeholder="Search for...">
            </div>
        </form>
        <!-- /input-group -->
        <table class="table">
            <tr>
                <td>Name</td>
            </tr>
            <tr ng-repeat="account in accounts">
                <td><a ng-click="ok(account._id)">{{account.acctName}}</a></td>
            </tr>
        </table>

        <div ng-if='error' class="form-group row">
            <div class="col-sm-offset-2 col-sm-10 col-lg-6">
                <div ng-include="'common.error'" ng-controller="common.error"><div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
    </div>
</script>
